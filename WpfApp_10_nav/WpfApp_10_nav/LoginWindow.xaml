<Window x:Class="WpfApp_10_nav.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_10_nav"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="用户名:" Margin="10,0,10,5" FontWeight="Bold"/>
            <TextBox x:Name="UsernameTextBox" Margin="10,0,10,10" Padding="5" 
                     Height="30" FontSize="14"/>

            <TextBlock Text="密码:" Margin="10,0,10,5" FontWeight="Bold"/>
            <PasswordBox x:Name="PasswordBox" Margin="10,0,10,20" Padding="5" 
                         Height="30" FontSize="14"/>

            <Button Content="登录" Click="LoginButton_Click" Margin="10" Padding="10" 
                    HorizontalAlignment="Center" Width="100" Height="35" 
                    FontSize="14" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
