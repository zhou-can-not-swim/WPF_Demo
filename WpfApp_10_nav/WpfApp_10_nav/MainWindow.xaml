<Window x:Class="WpfApp_10_nav.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_10_nav"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
     <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 导航栏 -->
        <StackPanel Orientation="Horizontal" Background="LightGray" Grid.Row="0">
            <Button Content="页面1" Margin="10" Click="NavigateToPage1"/>
            <Button Content="页面2" Margin="10" Click="NavigateToPage2"/>
            <Button Content="后退" Margin="10" Click="GoBack"/>
            <Button Content="前进" Margin="10" Click="GoForward"/>
        </StackPanel>
        
        <!-- 内容区域 -->
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"
               JournalOwnership="OwnsJournal"/>
    </Grid>
</Window>
