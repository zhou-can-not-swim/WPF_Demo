<Window x:Class="WpfApp_14_GlobalKey.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_14_GlobalKey"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="800">
    <StackPanel VerticalAlignment="Center" Margin="20">
        <TextBlock Text="按下快捷键组合（例如 Ctrl+Alt+X）"/>
        <TextBox x:Name="HotkeyTextBox" IsReadOnly="True" Margin="0,10"/>
        <Button Content="保存" Click="Save_Click" HorizontalAlignment="Right"/>
    </StackPanel>
</Window>
