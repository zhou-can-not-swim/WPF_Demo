<Page x:Class="WpfD.ViewPage.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfD.ViewPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">
    <Page.Resources>
        <!--按钮样式-->
        <Style x:Key="ImageButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="20"/>

            <!--背景颜色-->
            <Setter Property="Background" Value="#FFF"/>
            <!--字体颜色-->
            <Setter Property="Foreground" Value="HotPink"/>
            <!--边框厚度-->
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="5,5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <!--将边框背景绑定到按钮的 Background 属性-->
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3">
                            <!--显示按钮的内容（文本、图像等）-->
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="Foreground" Value="#1565C0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Image" x:Key="HoverImageStyle">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="150"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Page.Resources>
    <!--忽略开头为d 的属性-->
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <WrapPanel x:Name="wrapPanel" Grid.Row="0" Grid.Column="0" Margin="10" Grid.ColumnSpan="2" Height="Auto">
            <TextBox x:Name="textBox" Text="{Binding Search}" Grid.Row="0" Grid.Column="0" MinWidth="140" Margin="0 0 10 0"/>
            <Button x:Name="button2" Content="搜索文件" MinWidth="30" Margin="0 0 10 0" Command="{Binding DoSearch}" />
            <Button x:Name="button3" Content="下载任务中心" MinWidth="30" Margin="0 0 10 0"/>
            <Button x:Name="button4" Content="添加下载链接" MinWidth="30" Margin="0 0 10 0" Click="AddDownloadUrl"/>
            
        </WrapPanel>

        <!--进度条-->
        <!--<ProgressBar x:Name="progressBar" Grid.Row="3" Height="20" Margin="0,10" 
                     Minimum="0" Maximum="100"/>-->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
            <WrapPanel x:Name="ImageContainer" HorizontalAlignment="Center" Margin="10">
                <!-- 图片将会动态添加 -->
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</Page>
