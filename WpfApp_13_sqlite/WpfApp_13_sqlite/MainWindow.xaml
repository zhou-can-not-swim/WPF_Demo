<Window x:Class="WpfApp_13_sqlite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_13_sqlite"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 输入表单 -->
        <GroupBox Grid.Row="0" Header="用户信息" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="姓名:" Margin="5" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtName" Margin="5" Width="120"/>

                <TextBlock Grid.Row="0" Grid.Column="2" Text="邮箱:" Margin="5" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="3" x:Name="txtEmail" Margin="5" Width="120"/>

                <TextBlock Grid.Row="0" Grid.Column="4" Text="年龄:" Margin="5" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="5" x:Name="txtAge" Margin="5" Width="60"/>

                <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" x:Name="btnAdd" Content="添加" 
                        Margin="5" Click="BtnAdd_Click" Width="80" HorizontalAlignment="Left"/>
                <Button Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" x:Name="btnUpdate" Content="更新" 
                        Margin="5" Click="BtnUpdate_Click" Width="80" HorizontalAlignment="Left"/>
                <Button Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="2" x:Name="btnDelete" Content="删除" 
                        Margin="5" Click="BtnDelete_Click" Width="80" HorizontalAlignment="Left"/>
            </Grid>
        </GroupBox>

        <!-- 用户列表 -->
        <DataGrid Grid.Row="1" x:Name="dgUsers" AutoGenerateColumns="False" Margin="10" 
                  SelectionChanged="DgUsers_SelectionChanged" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="姓名" Binding="{Binding Name}" Width="120"/>
                <DataGridTextColumn Header="邮箱" Binding="{Binding Email}" Width="200"/>
                <DataGridTextColumn Header="年龄" Binding="{Binding Age}" Width="60"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 状态栏 -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="tbStatus" Text="就绪"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>