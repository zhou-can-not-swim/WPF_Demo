<Window x:Class="WpfApp_9_mvvm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_9_mvvm"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 输入区域 -->
        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="名称:"/>
            <TextBox x:Name="nameTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="邮箱:"/>
            <TextBox x:Name="emailTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="年龄:"/>
            <TextBox x:Name="ageTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="地址:"/>
            <TextBox x:Name="addressTextBox" Margin="0,5,0,10"/>

            <Button x:Name="addButton" Content="添加用户" Click="AddButton_Click"/>
        </StackPanel>

        <!-- 数据显示区域 -->
        <DataGrid x:Name="dataGrid" Grid.Row="1" Margin="10" AutoGenerateColumns="True">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="删除" Click="DeleteButton_Click"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
    </Grid>
</Window>
